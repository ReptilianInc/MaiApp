<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container_campus"
        android:orientation="vertical"
        android:layout_above="@+id/divider_campus">
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_above="@+id/bottom_nav_campus"
        android:layout_height="0.5dp"
        android:id="@+id/divider_campus"
        android:background="@android:color/darker_gray"/>

<android.support.design.widget.BottomNavigationView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottom_nav_campus"
    android:layout_alignParentBottom="true"
    android:background="@color/colorPrimary"
    app:menu = "@menu/campus_bottom_menu"
    app:itemIconTint="@drawable/highlight_color"
    app:itemTextColor = "@drawable/highlight_color">
</android.support.design.widget.BottomNavigationView>
</RelativeLayout>