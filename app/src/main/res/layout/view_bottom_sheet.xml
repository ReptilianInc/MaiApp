<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/mainBottomSheet"
    style="?attr/bottomSheetStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:elevation="6dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="61dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/weekTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:fontFamily="@font/montserrat_font_family"
        android:text="Текущая неделя"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:drawablePadding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="46dp"
        android:padding="4dp"
        android:background="?selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="@id/weekTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/weekTextView"
        app:srcCompat="@drawable/ic_expand_more_black_24dp"/>

    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="60dp"
        android:background="@color/colorTextSecondary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/weekChooseLayout"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividerView">

        <TextView
            style="@style/WeekButton"
            android:text="1"/>
        <TextView
            style="@style/WeekButton"
            android:text="2"/>
        <TextView
            style="@style/WeekButton"
            android:text="3"/>
        <TextView
            style="@style/WeekButton"
            android:text="4"/>
        <TextView
            style="@style/WeekButton"
            android:text="5"/>
        <TextView
            style="@style/WeekButton"
            android:text="6"/>
        <TextView
            style="@style/WeekButton"
            android:text="7"/>
        <TextView
            style="@style/WeekButton"
            android:text="8"/>
        <TextView
            style="@style/WeekButton"
            android:text="9"/>
        <TextView
            style="@style/WeekButton"
            android:text="10"/>
        <TextView
            style="@style/WeekButton"
            android:text="11"/>
        <TextView
            style="@style/WeekButton"
            android:text="12"/>
        <TextView
            style="@style/WeekButton"
            android:text="13"/>
        <TextView
            style="@style/WeekButton"
            android:text="14"/>
        <TextView
            style="@style/WeekButton"
            android:text="15"/>
        <TextView
            style="@style/WeekButton"
            android:text="16"/>
        <TextView
            style="@style/WeekButton"
            android:layout_width="match_parent"
            android:text="Текущая неделя"/>

    </com.google.android.flexbox.FlexboxLayout>

</androidx.constraintlayout.widget.ConstraintLayout>