<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/mainBottomSheet"
    style="?attr/bottomSheetStyle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:elevation="6dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="61dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/weekTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/montserrat_font_family"
        android:text="Текущая неделя"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="46dp"
        app:layout_constraintBottom_toBottomOf="@id/weekTextView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/weekTextView"
        app:srcCompat="@drawable/ic_expand_more_black_24dp"/>

    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="60dp"
        android:background="@color/colorTextSecondary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <GridLayout
        android:id="@+id/weekChooseLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:columnCount="4"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividerView">

        <Button
            style="@style/WeekButton"
            android:text="1"/>

        <Button
            style="@style/WeekButton"
            android:text="2"/>

        <Button
            style="@style/WeekButton"
            android:text="3"/>

        <Button
            style="@style/WeekButton"
            android:text="4"/>

        <Button
            style="@style/WeekButton"
            android:text="5"/>

        <Button
            style="@style/WeekButton"
            android:text="6"/>

        <Button
            style="@style/WeekButton"
            android:text="7"/>

        <Button
            style="@style/WeekButton"
            android:text="8"/>

        <Button
            style="@style/WeekButton"
            android:text="9"/>

        <Button
            style="@style/WeekButton"
            android:text="10"/>

        <Button
            style="@style/WeekButton"
            android:text="11"/>

        <Button
            style="@style/WeekButton"
            android:text="12"/>

        <Button
            style="@style/WeekButton"
            android:text="13"/>

        <Button
            style="@style/WeekButton"
            android:text="14"/>

        <Button
            style="@style/WeekButton"
            android:text="15"/>

        <Button
            style="@style/WeekButton"
            android:text="16"/>

        <Button
            style="@style/WeekButton"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:background="@drawable/week_button_background"
            android:textColor="@color/colorPrimary"
            android:layout_columnSpan="4"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:text="Текущая неделя"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>