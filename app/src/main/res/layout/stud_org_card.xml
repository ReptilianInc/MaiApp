<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:elevation="6dp"
    android:background="@drawable/list_item_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/montserrat_font_family"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Профсоюзный комитет студентов и аспирантов МАИ"/>

    <TextView
        android:id="@+id/leader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:fontFamily="@font/montserrat_font_family"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textColor="@color/colorBlack"
        android:drawablePadding="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Председатель Профкома
Корепанов Сергей Геннадьевич"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leader"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:fontFamily="@font/montserrat_font_family"
        android:textIsSelectable="true"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:drawablePadding="6dp"
        android:paddingBottom="6dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@id/leader"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Волоколамское ш., д. 4, комн. 305ГАК"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:drawableLeft="@drawable/ic_call_black_24dp"
        android:fontFamily="@font/montserrat_font_family"
        android:drawablePadding="6dp"
        android:gravity="center_vertical"
        android:autoLink="phone"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@id/address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="2dp"
        android:textStyle="bold"
        tools:text="+7 499 158 - 58 - 64"/>
</androidx.constraintlayout.widget.ConstraintLayout>