<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        tools:text="Профсоюзный комитет студентов и аспирантов МАИ"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="8dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/leader"
    android:layout_below="@+id/title"
    tools:text="Председатель Профкома
Корепанов Сергей Геннадьевич"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_below="@+id/leader"
        tools:text="Волоколамское ш., д. 4, комн. 305ГАК"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="6dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/phone"
    android:background="@color/colorText"
    android:textColor="@color/colorPrimary"
    android:textStyle="bold"
    android:padding="2dp"
    tools:text="+7 499 158 - 58 - 64"
    android:layout_below="@+id/address"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="6dp"/>
</RelativeLayout>