<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mai.nix.maiapp.NewsItemActivity"
    android:background="@color/colorPrimary">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progress_bar"
        android:layout_alignParentTop="true"
        android:indeterminate="true"
        android:visibility="invisible"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:layout_below="@+id/progress_bar"
    android:id="@+id/date_view"
    android:background="@color/date_background"
    android:textColor="@color/colorTextSecondary"
    android:padding="4dp"
    android:text="@string/place_holder"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_view"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/date_view"
        android:text="@string/place_holder"
        android:textColor="@color/colorTextSecondary"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/image_view"
        android:layout_below="@+id/title_view"
        android:layout_marginTop="16dp"
        android:background="@color/colorBackground"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/news_text"
        android:layout_below="@+id/image_view"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/place_holder"
        android:textSize="18sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/author_view"
            android:layout_margin="16dp"
            android:drawableLeft="@drawable/ic_author"
            android:drawableStart="@drawable/ic_author"
            android:text="@string/place_holder"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:layout_below="@+id/news_text"/>
</RelativeLayout>
</ScrollView>