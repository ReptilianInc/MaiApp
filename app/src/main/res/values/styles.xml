<resources>

    <!-- Base application theme. -->
    <style name="WebViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimarySec</item>
        <item name="colorPrimaryDark">@color/colorPrimarySec</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorText</item>
    </style>

    <style name="AppThemeSecondary" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimarySec</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkSec</item>
        <item name="colorAccent">@color/colorAccentSec</item>
    </style>
    <style name="AppThemeSecondary.NoActionBar" parent="AppThemeSecondary">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Widget.MyApp.Toolbar.Solid" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolbarFontTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:fontFamily">@font/montserrat_font_family</item>
    </style>

    <style name="TabsFontTheme" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/montserrat_font_family</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Parent theme sets colorControlNormal to textColorPrimary. -->
        <item name="android:textColorPrimary">@color/colorText</item>
    </style>
    <style name="AppTheme.NavigationView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:fontFamily">@font/montserrat_font_family</item>
    </style>

    <!-- Основная тема для тестирования -->
    <style name="AppThemeTest" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimarySec</item>
        <item name="colorPrimaryDark">@color/colorPrimarySec</item>
        <item name="colorAccent">@color/colorAccentSec</item>
    </style>
    <style name="Widget.Test.Toolbar.Solid" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorPrimarySec</item>
    </style>

    <style name="AppThemeTest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Parent theme sets colorControlNormal to textColorPrimary. -->
        <item name="android:textColorPrimary">@color/colorPrimary</item>
    </style>
    <style name="Splash" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimarySec</item>
        <item name="colorPrimaryDark">@color/colorPrimarySec</item>
        <item name="colorAccent">@color/colorAccentSec</item>
    </style>
</resources>
