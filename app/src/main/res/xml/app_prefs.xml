<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/common_cath">

        <Preference
            app:iconSpaceReserved="false"
            app:key="pref_group"
            app:summary="@string/pref_group_summary"
            app:title="@string/pref_group" />

        <ListPreference
            app:defaultValue="-1"
            app:entries="@array/themes_array"
            app:entryValues="@array/themes_values"
            app:iconSpaceReserved="false"
            app:key="pref_theme"
            app:summary="%s"
            app:title="@string/pref_theme" />

    </PreferenceCategory>

    <PreferenceCategory
        app:allowDividerAbove="false"
        app:iconSpaceReserved="false"
        app:title="@string/cache_cath">

        <Preference
            app:iconSpaceReserved="false"
            app:key="clear_cache_subj"
            app:title="@string/clear_cache_sub" />

        <Preference
            app:iconSpaceReserved="false"
            app:key="clear_cache_ex"
            app:title="@string/clear_cache_ex" />

        <ListPreference
            app:defaultValue="1"
            app:entries="@array/freg_array"
            app:entryValues="@array/freg_values"
            app:iconSpaceReserved="false"
            app:key="freg"
            app:summary="%s"
            app:title="@string/freg_cache" />

        <ListPreference
            app:defaultValue="1"
            app:entries="@array/freg_array"
            app:entryValues="@array/freg_values"
            app:iconSpaceReserved="false"
            app:key="freg_ex"
            app:summary="%s"
            app:title="@string/freg_cache_exams" />

    </PreferenceCategory>

    <PreferenceCategory
        app:allowDividerAbove="false"
        app:iconSpaceReserved="false"
        app:title="@string/about_cath">

        <Preference
            app:iconSpaceReserved="false"
            app:key="about"
            app:summary="@string/title_summary"
            app:title="@string/title_app" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="go_mai"
            app:title="@string/site_mai" />

    </PreferenceCategory>
</PreferenceScreen>