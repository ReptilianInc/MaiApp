<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.mai.nix.maiapp"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_mai_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_mai_new"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@style/AppThemeTest.NoActionBar">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppThemeSecondary">
        </activity>
        <activity
            android:name=".ChooseGroupActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/choose_group_activity_title"
            android:noHistory="true"
            android:theme="@style/AppThemeSecondary">
        </activity>
        <activity
            android:name=".SplashActivity"
            android:noHistory="true"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".NewsItemActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/place_holder"
            android:theme="@style/AppThemeTest">
        </activity>
        <activity android:name=".WebViewActivity"
                  android:configChanges="orientation|screenSize|keyboardHidden"
                  android:label="@string/place_holder"
                  android:theme="@style/AppThemeTest">
        </activity>
        <service
            android:name=".WidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS">
        </service>
        <receiver android:name=".TestWidgetClass"
            android:label="@string/app_name"
            android:icon="@mipmap/ic_launcher_mai_new">

            <intent-filter>
                <action
                    android:name="android.appwidget.action.APPWIDGET_UPDATE">
                </action>
            </intent-filter>
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/test_widget_metadata">
            </meta-data>

        </receiver>
    </application>

</manifest>