<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mai.nix.maiapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_fake"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_fake_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity
            android:name=".choose_groups.NewChooseGroupActivity"
            android:theme="@style/AppThemeTest" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/app_name"
            android:theme="@style/AppThemeTest" />
        <activity
            android:name=".SettingsActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppThemeSecondary" />
        <activity
            android:name=".ChooseGroupActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="@string/choose_group_activity_title"
            android:theme="@style/AppThemeSecondary" />
        <activity
            android:name=".NewSplashActivity"
            android:noHistory="true"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActivityChooseSingleItem"
            android:theme="@style/TransparentActivity" />
    </application>

</manifest>